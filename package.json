{
  "name": "relax",
  "version": "1.0.0",
  "description": "前端mvc框架",
  "scripts": {
    "test": "pnpm -w exec vitest",
    "test:run": "pnpm -w exec vitest run",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "demos": "pnpm --filter @relax/demos run dev",
    "build": "rts scripts/build.ts",
    "release": "rts scripts/release.ts",
    "changeset": "pnpm -w exec changeset",
    "changeset:version": "pnpm -w exec changeset version",
    "changeset:publish": "pnpm -w exec changeset publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@biomejs/biome": "^2.2.2",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.11.30",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.1.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rts.js": "^0.0.12",
    "t-packer": "^0.0.5",
    "vitest": "^1.6.0"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml,yaml}": [
      "biome check --write",
      "git add -A"
    ]
  }
}
